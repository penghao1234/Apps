<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/tm_splash_bg"
             android:orientation="vertical"
             tools:context=".SplashActivity">
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="fitXY"
      android:src="@drawable/tm_splash_bg"/>

  <RelativeLayout
      android:paddingTop="25dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/imgBackButton"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:src="@android:drawable/ic_media_rew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgBackButton"
        android:paddingTop="12dp"
        android:text="登录或注册账号"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        />

  </RelativeLayout>




  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="5dp"
      >

    <ImageView
        android:id="@+id/appImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher"
        />

    <Button
        android:id="@+id/btnLogin"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appImage"
        android:layout_centerInParent="true"
        android:text="使用QQ号登录"
        />

    <LinearLayout
        android:id="@+id/loginButtonLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btnLogin"
        android:paddingTop="30dp"
        android:paddingBottom="2dp">

      <Button
          android:id="@+id/btnLoginUp"
          style="@android:style/Widget.Holo.Light.Button.Small"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="注册"
          />

      <Button
          android:id="@+id/btnLoginIn"
          style="@android:style/Widget.Holo.Light.Button.Small"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="登录"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMassage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="注册即表示同意本APP的相关协议"
        />
  </RelativeLayout>

</FrameLayout>
